---
import Newsletter from './Newsletter.astro';
---

<footer class="border-t border-stone-200 dark:border-stone-800 mt-20">
  <div class="max-w-2xl mx-auto px-5 sm:px-8 py-12 space-y-10">
    <Newsletter />

    <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-stone-400 dark:text-stone-500">
      <p class="font-serif italic">Keep going.</p>
      <div class="flex items-center gap-4">
        <a href="/rss.xml" class="hover:text-stone-700 dark:hover:text-stone-300 !bg-none">RSS</a>
        <a href="https://github.com" class="hover:text-stone-700 dark:hover:text-stone-300 !bg-none">GitHub</a>
        <a href="https://twitter.com" class="hover:text-stone-700 dark:hover:text-stone-300 !bg-none">Twitter</a>
      </div>
    </div>
  </div>
</footer>
